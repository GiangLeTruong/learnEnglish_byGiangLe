<div class="col-md-3">
    <div class="sidebar-widget category">
        <h2 class="title">Nhóm từ</h2>
        <ul>
            {{#each categories}}
            <li><a href="/list?category={{id}}">{{name}}</a><span>({{Vocabularies.length}})</span></li>
            {{/each}}
        </ul>
    </div>
    <div class="sidebar-widget tag">
        <h2 class="title">Chứng chỉ</h2>
        {{#each certificates}}
        <a href="/list?certificate={{id}}">{{name}}</a>
        {{/each}}
    </div>
    <div class="sidebar-widget image">
        <h2 class="title">Từ khó</h2>

        <img src="/img/hard-work.png" alt="Image">

        <ul>
            {{#each brands}}
            <li><a href="/list?brand={{id}}">{{name}}</a></li>
            {{/each}}
        </ul>
    </div>

    <div class="sidebar-widget brands">
        <h2 class="title">Từ mới</h2>
        <ul>
            {{#each brands}}
            <li><a href="/list?brand={{id}}">{{name}}</a><span>({{Products.length}})</span></li>
            {{/each}}
        </ul>
    </div>
</div>